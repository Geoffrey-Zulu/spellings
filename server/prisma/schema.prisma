datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id           Int    @id @default(autoincrement())
  passwordHash String @map("password_hash")
}

model WordEntry {
  id          Int      @id @default(autoincrement())
  word        String
  meaning     String
  example     String
  entryDate   String   @unique @map("entry_date")
  createdAt   DateTime @default(now()) @map("created_at")
}

model AudioEntry {
  id           Int      @id @default(autoincrement())
  wordAudio    Bytes
  meaningAudio Bytes
  exampleAudio Bytes
  entryDate    String   @unique @map("entry_date")
  createdAt    DateTime @default(now()) @map("created_at")
}
